#:kivy 1.9.1

<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text_size: self.size
            halign: 'center'
            valign: 'top'
            markup: True
            text:'[b]Welcome To The BRP/D100 Character Generator[/b]'
        Label:
            text_size: self.size
            halign: 'center'
            valign: 'top'
            markup: True
            text:'The following screens will generate characters for different D100-related game systems, genres, races and professions'
        Button:
            text:'Next => Select System'
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'system_type'
        Button:
            text:'Quit'
            on_press: exit()

<SelectSystem>:
    GridLayout:
        cols: 2
        Label:
            text:'Basic Roleplaying (BGB)'
        CheckBox:
            group: 'system_group'
            on_active: root.brp_system(*args)
        Label:
            text:'Magic World'
        CheckBox:
            group: 'system_group'
            on_active: root.mw_system(*args)
        Label:
            text:'Mythras Imperative'
        CheckBox:
            group: 'system_group'
            on_active: root.mi_system(*args)
        Label:
            text:'Call of Cthulhu'
        CheckBox:
            group: 'system_group'
            on_active: root.coc_system(*args)
        Button:
            text:'Welcome Screen <= Back'
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'welcome'
        Button:
            text:'Next => Select Genre'
            on_press: root.manager.current = 'genre'

<SelectGenre>:
    GridLayout:
        cols: 2
        Label:
            text:'Fantasy'
        CheckBox:
            group: 'genre_group'
            on_active: root.genre = 'fantasy'
        Label:
            text:'Sci-Fi'
        CheckBox:
            group: 'genre_group'
            on_active: root.genre = 'scifi'
        Label:
            text:'Cyberpunk'
        CheckBox:
            group: 'genre_group'
            on_active: root.genre = 'cyberpunk'
        Label:
            text:'Wild West'
        CheckBox:
            group: 'genre_group'
            on_active: root.genre = 'wildwest'
        Label:
            text:'Horror'
        CheckBox:
            group: 'genre_group'
            on_active: root.genre = 'horror'
        Button:
            text:'Select System <= Back'
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'system_type'
        Button:
            text:'Next => Choose Race'
            on_press: 
                root.manager.transition.direction = 'left'
                root.choose_race_screen()

